					LPF ADD_SPELL_EFFECT INT_VAR insert_point = 0 opcode = 171 target = 1 timing = 9 STR_VAR resource = EVAL ~%focus_res%~ END
				  IF_EXISTS BUT_ONLY
//				  APPEND ~d5tf%shortsphere%.2da~ ~%sph%	%focus_res%	3~
				END
			  END
			  ACTION_IF (%plvl% > 3) BEGIN
