				IF_EXISTS BUT_ONLY
				APPEND ~d5tp%shortsphere%.2da~ ~%sph%	%priest_res%	3~
			  END
			  ACTION_IF !(FILE_EXISTS_IN_GAME ~%priest_res%.spl~) BEGIN
