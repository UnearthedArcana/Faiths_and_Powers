    WRITE_LONG   0x10 146 // cast spell
    WRITE_LONG   0x14 2   // preset target
    WRITE_LONG   0x20 1   // cast instantly (ignore level)
    WRITE_SHORT  0x24 1   // permament until death
    WRITE_SHORT  0x2c 100 // probability 100%
END

