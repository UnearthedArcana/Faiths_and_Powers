ACTION_IF !(FILE_EXISTS ~.../inlined/QD_MC_AP.EFF~) BEGIN
  COPY - ~.../inlined/d5_blank.file~ ~.../inlined/QD_MC_AP.EFF~
    INSERT_BYTES 0 0x110
    WRITE_ASCII  0x00 "EFF V2.0EFF V2.0" (16)
    PATCH_FOR_EACH ofs IN ~0x80~ ~0x84~ ~0x88~ ~0x8c~ BEGIN
      WRITE_LONG ofs "-1"
